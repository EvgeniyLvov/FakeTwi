<!DOCTYPE html>
<html>
  <head>
    <title>Faketwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <%= yield %>

          <%= render 'layouts/footer' %>
        </div>
      </div>
    </div>

  </body>
</html>
